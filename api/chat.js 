// api/chat.js â€” FREE text chat with Groq (Llama 3.1 70B)

export default async function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ reply: "Method not allowed" });
  }

  const { messages } = req.body;

  if (!messages || messages.length === 0) {
    return res.status(400).json({ reply: "No messages" });
  }

  try {
    const response = await fetch("https://api.groq.com/openai/v1/chat/completions", {
      method: "POST",
      headers: {
        "Authorization": `Bearer ${process.env.GROQ_API_KEY}`,
        "Content-Type": "application/json"
      },
      body: JSON.stringify({
        model: "llama-3.1-70b-versatile",  // fast, high quality, free tier
        messages: messages,
        temperature: 0.7,
        max_tokens: 1024
      })
    });

    if (!response.ok) {
      const errText = await response.text();
      console.error("Groq API error:", errText);
      return res.status(200).json({ reply: "Chat busy â€” try again soon! Images always work ðŸ”¥" });
    }

    const data = await response.json();
    const reply = data.choices[0].message.content.trim();

    res.status(200).json({ reply });

  } catch (error) {
    console.error("Chat error:", error);
    res.status(200).json({ reply: "Chat temporarily down â€” images still work perfectly! ðŸ”¥" });
  }
}